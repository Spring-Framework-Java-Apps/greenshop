<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

	<persistence-unit name="greenshopPU">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.woehlke.greenshop.catalog.entities.Product</class>
        <class>org.woehlke.greenshop.catalog.entities.ProductDescription</class>
        <class>org.woehlke.greenshop.catalog.entities.ProductOption</class>
        <class>org.woehlke.greenshop.catalog.entities.ProductOptionValue</class>
        <class>org.woehlke.greenshop.catalog.entities.ProductOptionValue2ProductOption</class>
        <class>org.woehlke.greenshop.catalog.entities.ProductAttribute</class>
        <class>org.woehlke.greenshop.catalog.entities.ProductImage</class>
        <class>org.woehlke.greenshop.catalog.entities.Language</class>
        <class>org.woehlke.greenshop.catalog.entities.Manufacturer</class>
        <class>org.woehlke.greenshop.catalog.entities.ManufacturerInfo</class>
        <class>org.woehlke.greenshop.catalog.entities.Category</class>
        <class>org.woehlke.greenshop.catalog.entities.CategoryDescription</class>
        <class>org.woehlke.greenshop.catalog.entities.Review</class>
        <class>org.woehlke.greenshop.catalog.entities.ReviewDescription</class>
        <class>org.woehlke.greenshop.catalog.entities.Special</class>
        <class>org.woehlke.greenshop.customer.entities.AddressFormat</class>
        <class>org.woehlke.greenshop.customer.entities.Country</class>
        <class>org.woehlke.greenshop.customer.entities.AddressBook</class>
        <class>org.woehlke.greenshop.customer.entities.Customer</class>
        <class>org.woehlke.greenshop.customer.entities.CustomerInfo</class>
        <class>org.woehlke.greenshop.customer.entities.Zone</class>
        <class>org.woehlke.greenshop.customer.entities.ProductNotification</class>
        <class>org.woehlke.greenshop.cart.entities.CustomersBasket</class>
        <class>org.woehlke.greenshop.cart.entities.CustomersBasketAttribute</class>
        <class>org.woehlke.greenshop.checkout.entities.Order</class>
        <class>org.woehlke.greenshop.checkout.entities.OrderStatus</class>
        <class>org.woehlke.greenshop.checkout.entities.OrderProduct</class>
        <class>org.woehlke.greenshop.checkout.entities.OrderProductAttribute</class>
        <class>org.woehlke.greenshop.checkout.entities.OrderTotal</class>
        <class>org.woehlke.greenshop.checkout.entities.OrderStatusHistory</class>
        <class>org.woehlke.greenshop.admin.entities.Administrator</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>

            <!--<property name="hibernate.hbm2ddl.auto" value="create-drop"/>-->
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.generate_statistics" value="true"/>
            <property name="jpa.showSql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="jpa.database" value="MYSQL"/>

        </properties>
    </persistence-unit>

</persistence>